{
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "// --- MENJALANKAN SERVER DEVELOPMENT ---": "",
    "backend": "cd services && php artisan serve",
    "frontend": "cd ui && npm run dev",
    "dev": "concurrently -n \"backend,frontend\" --kill-others-on-fail \"npm run backend\" \"npm run frontend\"",
    "// --- INSTALASI SEMUA DEPENDENSI ---": "",
    "install:all": "concurrently -n \"backend,frontend\" \"npm run install:backend\" \"npm run install:frontend\"",
    "install:backend": "cd services && composer install && cp .env.example .env && php artisan key:generate && php artisan migrate --seed && php artisan storage:link",
    "install:frontend": "cd ui && npm install",
    "// --- SCRIPT BANTUAN ---": "",
    "postinstall": "npm run install:all"
  }
}
